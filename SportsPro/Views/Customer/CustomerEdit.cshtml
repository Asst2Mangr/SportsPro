@model Customer

@{
    string title = ViewBag.Action + " Customer";
    ViewBag.Title = title;
}

<h2>@title</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Address">Address</label>
        <input asp-for="Address" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="City">City</label>
        <input asp-for="City" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="State">State</label>
        <input asp-for="State" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="PostalCode">Postal Code</label>
        <input asp-for="PostalCode" class="form-control">
    </div>
    <div class="form-group">
        <button type="button" class="btn btn-primary dropdown-toggle" id="countryDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Select a country...
        </button>
        <div class="dropdown-menu" aria-labelledby="countryDropdown">
            <div style="max-height: 200px; overflow-y: auto;">
                @foreach (var country in ViewBag.Country)
                {
                    <a class="dropdown-item" data-country-id="@country.CountryID"
                    @(country.CountryID == Model.CountryID ? "selected" : "")>
                        @country.Name
                    </a>
                }
            </div>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Phone">Price</label>
        <input asp-for="Phone" class="form-control">
    </div>
    <input type="hidden" asp-for="CustomerID" />
    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-controller="Customer" asp-action="CustomerList" class="btn btn-primary">Cancel</a>
</form>
