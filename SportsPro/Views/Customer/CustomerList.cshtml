@model List<SportsPro.Models.Customer>
@{
    ViewBag.Title = "Customer Manager";
}

<h1>Customer Manager</h1>
<div class="row">
    <div class="col-sm-2">
        <div class="col-sm-10">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>City</th>
                        <th></th>
                </thead>
                <tbody>
                    @foreach (var customer in Model)
                    {
                        <tr>
                            <td>@customer.FullName</td>
                            <td>@customer.Email</td>
                            <td>@customer.City</td>
                            <td>
                                <a asp-controller="Customer" asp-action="Edit"
                                   asp-route-id="@customer.CustomerID" class="btn btn-primary">Edit</a>
                            </td>
                            <td>
                                <a asp-controller="Customer" asp-action="Delete"
                                   asp-route-id="@customer.CustomerID" class="btn btn-primary">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <a asp-controller="Customer" asp-action="Add" class="btn btn-primary">Add Customer</a>
        </div>
    </div>
</div>
