@model List<Product>
@{
    ViewBag.Title = "Product Manager";
}

<h1>Product Manager</h1>
@if (TempData.Keys.Contains("message"))
{
    <h4 class="bg-info text-center text-white p-2">
        @TempData["message"]
    </h4>
}
<div class="row">
    <div class="col-sm-2">
        <div class="col-sm-10">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Code</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Release Date</th>
                        <th></th>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.ProductCode</td>
                            <td>@product.Name</td>
                            <td>@product.YearlyPrice.ToString("C")</td>
                            <td>@product.ReleaseDate.ToString("MM/dd/yyyy")</td>
                            <td>
                                <a asp-controller="Product" asp-action="Edit"
                                   asp-route-id="@product.ProductID" class="btn btn-primary">Edit</a>
                            </td>
                            <td>
                                <a asp-controller="Product" asp-action="Delete"
                                   asp-route-id="@product.ProductID" class="btn btn-primary">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <a asp-controller="Product" asp-action="Add" class="btn btn-primary">Add Product</a>
        </div>
    </div>
</div>
