@model SportsPro.Models.AddEditIncidentViewModel

@{
    ViewBag.Title = "Incident Manager";
}

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<h2>@ViewBag.Title</h2>

<form asp-action="@Model.Operation" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="CurrentIncident.CustomerID">Customer</label>
        <select asp-for="CurrentIncident.CustomerID" class="form-control" asp-items="@(new SelectList(Model.Customers, "CustomerID", "FullName"))" required>
            <option value="">Select a Customer</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="CurrentIncident.ProductID">Product</label>
        <select asp-for="CurrentIncident.ProductID" class="form-control" asp-items="@(new SelectList(Model.Products, "ProductID", "Name"))" required>
            <option value="">Select a Product</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="CurrentIncident.Title">Title</label>
        <input asp-for="CurrentIncident.Title" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="CurrentIncident.Description">Description</label>
        <input asp-for="CurrentIncident.Description" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="CurrentIncident.TechnicianID">Technician</label>
        <select asp-for="CurrentIncident.TechnicianID" class="form-control" asp-items="@(new SelectList(Model.Technicians, "TechnicianID", "Name"))">
            <option value="">Select a Technician</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="CurrentIncident.DateOpened">Date Opened</label>
        <input asp-for="CurrentIncident.DateOpened" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="CurrentIncident.DateClosed">Date Closed</label>
        <input asp-for="CurrentIncident.DateClosed" class="form-control">
    </div>
    <input type="hidden" asp-for="CurrentIncident.IncidentID" />
    <button type="submit" class="btn btn-primary">@Model.Operation</button>
    <a asp-controller="Incident" asp-action="List" class="btn btn-primary">Cancel</a>
</form>